alias lg='tmux popup -E -h80% -w80% -d (pwd) "lazygit"'
alias grb='git rebase (git branch | peco | sed "s/^[ \*]*//")'
alias gmg='git merge (git branch | peco | sed "s/^[ \*]*//")'

# linux
# alias cl='clear'
alias al='alias | peco --query "$LBUFFER" | sed -e "s/^alias//" | sed -e "s/  */:/g" | sed -e "s/^://" | sed -e "s/:.*//" | tr -d "\n" | pbcopy'
alias cdp='cd (find . -maxdepth 3 -type d -not -path "*/\.git/*" | peco)'
alias rmp='rm (find . -maxdepth 3 -type f -not -path "*/\.git/*" | peco)'
alias rmrp='rm -r (find . -maxdepth 3 -type d -not -path "*/\.git/*" | peco)'
alias cat="bat --style=plain"
alias catp='bat --style=plain (find . -maxdepth 3 -type f -not -path "*/\.git/*" | peco)'
alias vip='vi (find . -maxdepth 3 -type f -not -path "*/\.git/*" | peco)'

