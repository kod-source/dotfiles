# alias gd='git diff'
alias gdp='git diff (git status | peco | sed -e "s/modified://" | sed -e "s/deleted://" | sed s/"\t"//g | sed "s/^[ \t]*//")'
# alias gds='git diff --staged'
alias gdsp='git diff --staged (git status | peco | sed -e "s/modified://" | sed -e "s/deleted://" | sed s/"\t"//g | sed "s/^[ \t]*//")'
alias gbb='git branch -D (git branch | peco | sed "s/^[ \*]*//")'
alias gcb='git checkout (git branch | peco | sed "s/^[ \*]*//")'
# alias gfp='git ls-files | peco | tr -d "\n" | pbcopy'
alias grm='git rm --cached -r (git status | peco | sed -e "s/modified://" | sed -e "s/deleted://" | sed -e "s/new file://" | sed s/"\t"//g | sed "s/^[ \t]*//") | tr "\n" " "'
